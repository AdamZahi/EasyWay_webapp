{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}Ajouter une Ligne{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .form-control {
            max-width: 100%;
        }
        .submit-btn {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block content %}
<br><br><br><br><br><br>
<div class="container mt-4">
    <div class="form-container">
        <h2 class="text-center mb-4">Ajouter Ligne</h2>
            

        <div class="col-md-6">
            <div class="card bg-primary text-white border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h4 class="card-title text-white">üó∫Ô∏è Trouvez votre destination</h4>
                </div>
                <div class="card-body p-0">
                    <div class="card-body p-0">
                        <div id="map" style="height: 500px; width: 100%;"></div>
                    </div>
                    <div class="p-2 text-end">
                        <a href="https://www.openstreetmap.org/?#map=7/36.726/8.789" class="text-white">üîç Voir en grand</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.depart, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter departure'
                    },
                    'label': 'D√©part',
                    'row_attr': {'class': 'form-group'}
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.arret, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter stop'
                    },
                    'label': 'Arr√™t',
                    'row_attr': {'class': 'form-group'}
                }) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.type, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter type'
                    },
                    'label': 'Type',
                    'row_attr': {'class': 'form-group'}
                }) }}
            </div>
        </div>

        <div class="d-flex justify-content-center gap-3 submit-btn">
            <button type="button" onclick="window.location.href='{{ path('ligne_list_admin') }}'" class="btn btn-secondary px-4">Annuler</button>
            <button type="submit" class="btn btn-primary px-4">Ajouter</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% block js %}
{{ parent() }}
                    <!--  MY MAP -->
