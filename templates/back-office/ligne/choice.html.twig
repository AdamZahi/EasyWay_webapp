{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}BIENVENUE ADMINISTRATEUR !{% endblock %}

{% block content %}
<div class="container py-5">
    <!-- Welcome Message -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Bienvenue, Administrateur 👋</h1>
        <p class="lead text-muted">Gérez facilement les lignes et les stations à travers la Tunisie.</p>
    </div>

    <!-- Image + Message -->
    <div class="row align-items-center mb-5">
        <!-- Text Left -->
        <div class="col-md-6 mb-4 mb-md-0">
            <h3 class="fw-semibold text-center text-md-start">
                Planifiez vos déplacements <span class="text-primary">facilement</span><br>
                à travers <span class="text-success">la Tunisie</span> 🇹🇳
            </h3>
        </div>

        <!-- Image Right -->
        <div class="col-md-6 text-center">
            <img
                src="{{ asset('img/map.jpg') }}"
                alt="Carte de la Tunisie"
                class="img-fluid rounded shadow"
                style="max-height: 350px; width: auto;"
            />
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-4 mb-3 text-center">
            <a href="{{ path('ligne_list_admin') }}" class="btn btn-primary btn-lg w-100 shadow-sm">
                📍 Gérer les Lignes
            </a>
        </div>
        <div class="col-md-4 mb-3 text-center">
            <a href="{{ path('station_list_admin') }}" class="btn btn-success btn-lg w-100 shadow-sm">
                🏁 Gérer les Stations
            </a>
        </div>
    </div>
</div>
{% endblock %}
