<!-- Importation de Chart.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

<script>
// Donn√©es pass√©es depuis Symfony
const statutData = {{ statutCount|json_encode|raw }};
const categorieData = {{ categoriesCount|json_encode|raw }};
const evolutionData = {{ evolutionReclamations|json_encode|raw }};

console.log("√âvolution des r√©clamations :", evolutionData);


// Graphique R√©partition par Statut
const statutChart = new Chart(document.getElementById('statutChart'), {
    type: 'pie',
    data: {
        labels: Object.keys(statutData),
        datasets: [{
            data: Object.values(statutData),
            backgroundColor: ['#FF5733', '#FFC107', '#28A745'],
            hoverOffset: 4
        }]
    },
    options: {
        plugins: {
            legend: { position: 'bottom' },
            title: { display: true, text: 'R√©partition des R√©clamations' }
        }
    }
});

// Graphique R√©partition par Cat√©gorie
const categorieChart = new Chart(document.getElementById('categorieChart'), {
    type: 'bar',
    data: {
        labels: Object.keys(categorieData),
        datasets: [{
            label: 'Nombre de R√©clamations',
            data: Object.values(categorieData),
            backgroundColor: '#007BFF'
        }]
    },
    options: {
        responsive: true,
        scales: {
            y: { beginAtZero: true }
        }
    }
});


// Donn√©es pass√©es depuis Symfony

console.log("√âvolution des r√©clamations par jour :", evolutionData);

// Pr√©parer les labels (jours) et les valeurs (nombre de r√©clamations)
const evolutionLabels = Object.keys(evolutionData);
const evolutionValues = Object.values(evolutionData);

// Graphique √âvolution des R√©clamations par Jour
const evolutionChart = new Chart(document.getElementById('evolutionChart'), {
    type: 'line',
    data: {
        labels: evolutionLabels, // Cl√©s (jours)
        datasets: [{
            label: 'Nombre de R√©clamations',
            data: evolutionValues, // Valeurs (nombre de r√©clamations)
            borderColor: '#28A745',
            fill: false
        }]
    },
    options: {
        responsive: true,
        scales: {
            y: { beginAtZero: true },
            x: {
                title: { display: true, text: 'Jour' }
            }
        }
    }
});

</script>

{% endblock %}
