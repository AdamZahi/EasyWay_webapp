{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}Ajouter une Station{% endblock %}

{% block content %}
<div class="container mt-5">
    <h2 class="text-center mb-4">âž• Ajouter une Station</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom de la station') }}
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex : Station Bab Saadoun'
                            }
                        }) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.localisation, 'Localisation') }}
                        {{ form_widget(form.localisation, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex : Tunis'
                            }
                        }) }}
                        {{ form_errors(form.localisation) }}
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="{{ path('station_list_admin') }}" class="btn btn-outline-secondary">Annuler</a>
                        <button type="submit" class="btn btn-success">Ajouter</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
