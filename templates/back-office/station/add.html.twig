{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}Ajouter une Station{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="text-center mb-4">Ajouter Station</h2>

            <div class="row">
                <!-- Left: Form -->
                <div class="col-lg-5 mb-4">
                    <div class="bg-light p-4 rounded shadow-sm">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom de la station'}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                  
                                <div class="col-md-6">
                                    {{ form_label(form.localisation) }}
                                    {{ form_widget(form.localisation, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Localisation'}}) }}
                                    {{ form_errors(form.localisation) }}
                                </div>
                            </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" onclick="window.location.href='{{ path('station_list_admin') }}'" class="btn btn-secondary">Annuler</button>
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Right: Map -->
                <div class="col-lg-7">
                    <div class="card bg-primary text-white border-0 shadow-sm h-100">
                        <div class="card-header bg-transparent border-0">
                            <h4 class="card-title text-white">üó∫Ô∏è Trouvez votre destination</h4>
                        </div>
                        <div class="card-body p-0">
                            <div id="map" style="height: 500px; width: 100%;"></div>
                            <div class="p-2 text-end">
                                <a href="https://www.openstreetmap.org/?#map=7/36.726/8.789" class="text-white">üîç Voir en grand</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End row -->
        </div>
    </div>
</div>
{% endblock %}
