{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}Modifier Station{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            font-size: 26px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            padding: 10px;
            font-size: 16px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .submit-btn {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="form-container">
            <h1>Modifier Station #{{ station.id }}</h1>

            {{ form_start(form) }}
                <!-- Station Name -->
                <div class="mb-4">
                    {{ form_row(form.nom, {
                        'attr': {'class': 'form-control'},
                        'label': 'Nom de la Station'
                    }) }}
                </div>

                <!-- Station Location -->
                <div class="mb-4">
                    {{ form_row(form.localisation, {
                        'attr': {'class': 'form-control'},
                        'label': 'Localisation'
                    }) }}
                </div>

                <!-- Admin Name (not ID) -->
                <div class="mb-4">
                    <label for="admin_name">Administrateur</label>
                    <input type="text" id="admin_name" class="form-control" value="{{ station.admin.nom }}" readonly />
                </div>

                <div class="submit-btn">
                    <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
                    <a href="{{ path('station_list_admin') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
