{% extends 'back-office/reclamation/backbase.html.twig' %}

{% block title %}Modifier Station{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            font-size: 26px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            padding: 10px;
            font-size: 16px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .submit-btn {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block main_content %}
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="p-4 shadow" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.3); border-radius: 20px;">
                    <h4 class="mb-4 text-center">üõ† Modifier la Station n¬∞{{ station.id }}</h4>

                    {{ form_start(form) }}
                        <div class="mb-4">
                            {{ form_row(form.nom, {
                                'attr': {'class': 'form-control', 'placeholder': 'Nom de la station'},
                                'label': 'Nom de la station'
                            }) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.localisation, {
                                'attr': {'class': 'form-control', 'placeholder': 'Localisation'},
                                'label': 'Localisation'
                            }) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.id_ligne, {
                                'attr': {'class': 'form-control'},
                                'label': 'Ligne'
                            }) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.id_admin, {
                                'attr': {'class': 'form-control'},
                                'label': 'Administrateur'
                            }) }}
                        </div>

                        <div class="mt-3 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">üíæ Mettre √† jour</button>
                            <a href="{{ path('station_list') }}" class="btn btn-outline-secondary">‚Ü©Ô∏è Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
