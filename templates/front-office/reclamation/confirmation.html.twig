{# templates/front-office/reclamation/confirmation.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Confirmation</title>
</head>
<body>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if (confirm("Une réclamation a été ajoutée avec l'email {{ email }}.\nVoulez-vous voir les réponses ?")) {
                window.location.href = "{{ path('admin_voir_reponses', {'id': reclamationId}) }}";
            } else {
                window.location.href = "{{ path('app_reclamation') }}";
            }
        });
    </script>
</body>
</html>
