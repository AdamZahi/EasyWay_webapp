        <h2 class="mb-2 text-white">EasyWay</h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="#" class="nav-item nav-link">Acceuil</a>
            <a href="#" class="nav-item nav-link active">√âv√©nements</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Services</a>
                <div class="dropdown-menu fade-up m-0">
                    <a href="#" class="dropdown-item">Co-voiturage</a>
                    <a href="#" class="dropdown-item">Transport public</a>
                    <a href="#" class="dropdown-item">V√©hicules</a>
                    <a href="#" class="dropdown-item">R√©clamation</a>
                </div>
            </div>
            <a href="#" class="nav-item nav-link">Contact</a>
        </div>
        <h4 class="m-0 pe-lg-5 d-none d-lg-block"><i class="fa fa-headphones text-primary me-3"></i>+216 77 777 777</h4>
    </div>
</nav>
<!-- Navbar End -->
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-center">Reclamation Form</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        
        <div class="row">
            {% for field in form %}
                <div class="mb-3 col-md-6">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary px-4">Ajouter</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='{{ path('chatbot') }}'">üí¨ Vous pouvez questionner le AI</button>

        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>


    {% if showAlert %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if (confirm("R√©clamation ajout√©e.\nVoulez-vous voir les r√©ponses li√©es √† cette r√©clamation ?")) {
                window.location.href = "{{ path('admin_voir_reponses', {'id': reclamationId}) }}";
            }
        });
    </script>
{% endif %}

{% endblock %}
