{% extends 'front-office/index.html.twig' %}

{% block body %}
<!-- Navbar Start -->
{% block navbar %}
        {{ parent() }}
    {% endblock %}
<!-- Navbar End -->
<style>
    .chat-container {
        max-width: 600px;
        margin: auto;
        padding: 1rem;
    }

    .chat-box {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 1rem;
        height: 400px;
        overflow-y: auto;
        background-color: #f1f1f1;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .message {
        margin: 0.5rem 0;
        display: flex;
    }

    .message.bot {
        justify-content: flex-start;
    }

    .message.user {
        justify-content: flex-end;
    }

    .bubble {
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 20px;
        line-height: 1.4;
        font-size: 0.95rem;
    }

    .bubble.bot {
        background-color: #e2e2e2;
        color: #333;
        border-bottom-left-radius: 0;
    }

    .bubble.user {
        background-color: #007bff;
        color: white;
        border-bottom-right-radius: 0;
    }

    .input-area {
        display: flex;
        gap: 10px;
        margin-top: 1rem;
    }

    #loading {
        font-size: 0.9rem;
        color: gray;
        display: none;
    }

    .back-btn {
        display: inline-block;
        margin: 1rem 0;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        text-align: center;
        width: 100%;  /* Centrer le bouton */
    }

    .back-btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="chat-container">
    <h2>üí¨ Easy Way</h2>
    
    <!-- Bouton Retour aux r√©clamations en haut -->
   

    <div id="chatbox" class="chat-box">
        <div class="message bot">
            <div class="bubble bot">Bonjour ! Comment puis-je vous aider ?</div>
        </div>
    </div>

    <div id="loading">Le bot r√©fl√©chit...</div>

    <div class="input-area">
        <input type="text" id="userInput" class="form-control" placeholder="√âcrivez votre message..." />
        <button id="sendBtn" class="btn btn-primary">Envoyer</button>
    </div>

     <a href="{{ path('app_reclamation') }}" class="back-btn">Retour aux r√©clamations</a>
</div>


<script>
    const chatbox = document.getElementById('chatbox');
    const input = document.getElementById('userInput');
    const sendBtn = document.getElementById('sendBtn');
    const loading = document.getElementById('loading');

    function appendMessage(from, message) {
        const msgDiv = document.createElement('div');
        msgDiv.classList.add('message', from);

        const bubble = document.createElement('div');
        bubble.classList.add('bubble', from);
        bubble.textContent = message;

        msgDiv.appendChild(bubble);
        chatbox.appendChild(msgDiv);
        chatbox.scrollTop = chatbox.scrollHeight;
    }

    function sendMessage() {
        const message = input.value.trim();
        if (!message) return;

        appendMessage('user', message);
        input.value = '';
        loading.style.display = 'block';

        fetch('/chatbot/message', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message })
        })
        .then(response => response.json())
        .then(data => {
            appendMessage('bot', data.reply);
        })
        .catch(err => {
            appendMessage('bot', 'D√©sol√©, une erreur est survenue.');
        })
        .finally(() => {
            loading.style.display = 'none';
        });
    }

    sendBtn.addEventListener('click', sendMessage);

    input.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            sendBtn.click();
        }
    });
</script>
{% endblock %}
