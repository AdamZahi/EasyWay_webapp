{% extends 'front-office/front.html.twig' %}

{% block title %}Ajouter Paiement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .form-control {
            max-width: 100%;
        }
        .submit-btn {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block main_content %}
    <br><br><br><br><br><br>
    <div class="container mt-4">
        <div class="form-container">
            <h2 class="text-center mb-4">Ajouter Paiement</h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.montant, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Montant'
                        },
                        'label': 'Montant',
                        'row_attr': {'class': 'form-group'}
                    }) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.res_id, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Réservation'
                        },
                        'label': 'Réservation',
                        'row_attr': {'class': 'form-group'}
                    }) }}
                </div>
            </div>

            {# Optional: If pay_id and user_id are hidden or auto-set in controller, skip rendering them. #}
            {{ form_row(form.pay_id) }}
            {{ form_row(form.user_id) }}

            <div class="text-center submit-btn">
                <button type="submit" class="btn btn-primary px-4">Payer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
