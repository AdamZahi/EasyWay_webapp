{% extends 'front-office/front.html.twig' %}

{% block title %}Lignes{% endblock %}

{% block main_content %}
<br><br><br><br><br><br>
    <div class="container mt-4">
        <h1>Lignes</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <table class="table table-striped" border="1">
            <thead>
                <tr>
                    <th>DEPART</th>
                    <th>ARRET</th>
                    <th>TYPE</th>
                    <th>Administrateur</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                {% for ligne in lignes %}
                    <tr>
                        <td>{{ ligne.depart }}</td>
                        <td>{{ ligne.arret }}</td>
                        <td>{{ ligne.type }}</td>
                        <td>{{ ligne.admin_id }}</td>
                        <td>
                            <a href="{{ path('ligne_edit', {'id': ligne.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            <a href="{{ path('ligne_delete', {'id': ligne.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No reservations found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('ligne_add') }}" class="btn btn-primary">Ajouter une nouvelle Ligne</a>
    </div>
{% endblock %}
