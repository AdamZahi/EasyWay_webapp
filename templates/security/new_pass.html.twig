{% extends 'front-office/front.html.twig' %}

{% block title %}Définir un nouveau mot de passe{% endblock %}

{% block body %}
<div class="container" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background-color: #f5f5f5;">
    <div class="card shadow d-flex flex-row" style="max-width: 900px; width: 100%; overflow: hidden;">
        
        <!-- Partie gauche (formulaire) -->
        <div class="p-5" style="flex: 1; background-color: #fff;">
            <div class="mb-4">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" style="width: 90px;">
            </div>
            <h3 class="mb-3" style="font-family: 'Arial Bold';">Définir un mot de passe</h3>
            <p class="text-muted mb-4">Votre ancien mot de passe a été réinitialisé. Veuillez créer un nouveau mot de passe.</p>

            {% for flashMessage in app.flashes('success') %}
                <div class="alert alert-success">{{ flashMessage }}</div>
            {% endfor %}
            {% for flashMessage in app.flashes('error') %}
                <div class="alert alert-danger">{{ flashMessage }}</div>
            {% endfor %}

            <form method="post">
                <div class="form-group mb-3">
                    <input type="password" name="new_password" class="form-control" placeholder="Créer un mot de passe" required>
                </div>
                <div class="form-group mb-3">
                    <input type="password" name="confirm_password" class="form-control" placeholder="Confirmer votre mot de passe" required>
                </div>
                <button type="submit" class="btn w-100 text-white" style="background-color: #e40000;">Définir le mot de passe</button>
            </form>
        </div>

        <!-- Partie droite (image) -->
        <div class="p-5 d-none d-md-block" style="flex: 1; background-color: #ffffff;">
            <img src="{{ asset('img/earth.jpg') }}"  class="img-fluid" style="max-height: 350px;">
        </div>
    </div>
</div>
{% endblock %}
