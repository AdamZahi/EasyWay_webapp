{% extends 'front-office/front.html.twig' %}

{% block title %}Passager Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1>Passager Dashboard</h1>
    <p>Welcome to the passenger dashboard.</p>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    My Bookings
                </div>
                <div class="card-body">
                    <h5 class="card-title">Manage Bookings</h5>
                    <p class="card-text">View and manage your upcoming and past bookings.</p>
                    <a href="{{ path('reservation_add') }}" class="btn btn-primary">Go to Bookings</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Find a Ride
                </div>
                <div class="card-body">
                    <h5 class="card-title">Search Rides</h5>
                    <p class="card-text">Search for available rides.</p>
                    <a href="#" class="btn btn-primary">Find a Ride</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Payments
                </div>
                <div class="card-body">
                    <h5 class="card-title">My Payments</h5>
                    <p class="card-text">View your payment history and manage payment methods.</p>
                    <a href="#" class="btn btn-primary">Go to Payments</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
    <div class="card">
        <div class="card-header">
            Réclamation
        </div>
        <div class="card-body">
            <h5 class="card-title">Réclamation</h5>
            <p class="card-text">View your payment history and manage payment methods.</p>
            <a href="{{ path('app_reclamation') }}" class="btn btn-primary">Go to Réclamation</a>
        </div>
    </div>
</div>


    </div>
</div>
