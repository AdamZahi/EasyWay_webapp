{% extends 'front-office/index.html.twig' %}

{% block title %}Mon Profil - Passager{% endblock %}

{% block body %}
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
    <a href="{{ path('passager_dashboard') }}" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
        <img src="{{ asset('img/LOGOEASY.png') }}" alt="Logo EasyWay" style="width: 60px; height: 60px; border-radius: 50%; margin-right: 10px;">
        <h2 class="mb-2 text-white">EasyWay</h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="{{ path('passager_dashboard') }}" class="nav-item nav-link active">Accueil</a>
            <a href="#" class="nav-item nav-link">Co-voiturage</a>
            <a href="#" class="nav-item nav-link">Réclamation</a>
            <a href="#" class="nav-item nav-link">Véhicules</a>
            <a href="#" class="nav-item nav-link">Événements</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="fa fa-user me-2"></i>Profil
                </a>
                <ul class="dropdown-menu fade-up m-0">
                    <li><a href="{{ path('edit_profile') }}" class="dropdown-item">Consulter mon profil</a></li>
                    <li><a href="{{ path('app_logout') }}" class="dropdown-item">Se déconnecter</a></li>
                </ul>
            </div>
            <a href="#" class="nav-item nav-link">Contact</a>
        </div>
    </div>
</nav>
<!-- Navbar End -->

<!-- Profil Start -->
<div class="container mt-5">
    <h1 class="mb-4">Mon Profil</h1>
    
    <div class="row">
       <!-- Image de Profil avec modification -->
<div class="col-md-4">
    <div class="card h-100">
        <div class="card-header text-center">
            <strong>Photo de Profil</strong>
        </div>
        <div class="card-body d-flex flex-column align-items-center justify-content-between">
            <img src="{{ asset('uploads/' ~ app.user.photoProfil) }}" class="rounded-circle shadow mb-4" style="width: 150px; height: 150px; object-fit: cover; border: 2px solid #0d6efd;">

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="form-group w-100">
                    <label class="form-label">Changer la photo :</label>
                    {{ form_widget(form.photoProfil, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary mt-3">Mettre à jour la photo</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Détails du Profil -->
<div class="col-md-8">
    <div class="card">
        <div class="card-header">
            Détails du Profil
        </div>
        <div class="card-body">
            <h5 class="card-title mb-4">Informations personnelles</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Nom :</strong> {{ app.user.nom }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Prénom :</strong> {{ app.user.prenom }}</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Email :</strong> {{ app.user.email }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Téléphone :</strong> {{ app.user.telephonne }}</p>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a href="{{ path('edit_profile') }}" class="btn btn-primary">Modifier mes informations</a>
            </div>
        </div>
    </div>
</div>


<!-- Footer Start -->
<div class="container-fluid bg-dark text-light footer pt-5 mt-5">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-4 col-md-6">
                <h4 class="text-light mb-4">Contact</h4>
                <p><i class="fa fa-map-marker-alt me-3"></i>Tunisie, Ariana</p>
                <p><i class="fa fa-phone-alt me-3"></i>+216 12 345 678</p>
                <p><i class="fa fa-envelope me-3"></i>support@easyway.tn</p>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-light mb-4">Navigation</h4>
                <a class="btn btn-link text-light" href="#">Accueil</a>
                <a class="btn btn-link text-light" href="#">Co-voiturage</a>
                <a class="btn btn-link text-light" href="#">Réclamation</a>
                <a class="btn btn-link text-light" href="#">Véhicules</a>
                <a class="btn btn-link text-light" href="#">Événements</a>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-light mb-4">Newsletter</h4>
                <p>Abonnez-vous pour recevoir les dernières nouvelles de EasyWay.</p>
                <div class="position-relative w-100">
                    <input class="form-control border-0 py-3 ps-4 pe-5" type="text" placeholder="Votre Email">
                    <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">S'inscrire</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container text-center mt-4">
        <p class="mb-0">&copy; 2025 EasyWay. Tous droits réservés.</p>
    </div>
</div>
<!-- Footer End -->
{% endblock %}
