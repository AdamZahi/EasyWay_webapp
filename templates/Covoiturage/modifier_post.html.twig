{% extends 'base.html.twig' %}

{% block title %}Modifier l'offre | EasyWay{% endblock %}

{% block body %}
<div class="container mt-5">

    {# LOGO #}
    <div class="text-center mb-4">
        <img src="{{ asset('img/carpool.png') }}" alt="Logo EasyWay" class="img-fluid" style="max-height: 120px;">
    </div>

    <h2 class="mb-4 text-center fw-bold text-primary">Modifier l'offre de covoiturage</h2>

    {# Affichage des erreurs globales #}
    {% for error in form.vars.errors %}
        <div class="alert alert-danger text-center">{{ error.message }}</div>
    {% endfor %}

    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body bg-light rounded">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <div class="form-group mb-3">
                    {{ form_label(form.message, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.message) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.villeDepart, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.villeDepart, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.villeDepart) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.villeArrivee, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.villeArrivee, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.villeArrivee) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.date, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.nombreDePlaces, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nombreDePlaces, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nombreDePlaces) }}
                </div>

                <div class="form-group mb-4">
                    {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_covoiturage_mes_offres') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-success fw-bold">
                        <i class="fas fa-check me-2"></i>Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
