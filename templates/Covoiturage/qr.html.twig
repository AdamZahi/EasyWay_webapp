{# templates/qr_code_page.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}QR Code Reservation{% endblock %}

{% block body %}
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
    <a href="{{ path('passager_dashboard') }}" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
        <img src="{{ asset('img/LOGOEASY.png') }}" alt="Logo EasyWay" style="width: 60px; height: 60px; border-radius: 50%; margin-right: 10px;">
        <h2 class="mb-2 text-white">EasyWay</h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="{{ path('passager_dashboard') }}" class="nav-item nav-link">Accueil</a>
            <a href="#" class="nav-item nav-link">Co-voiturage</a>
            <a href="#" class="nav-item nav-link">Réclamation</a>
            <a href="#" class="nav-item nav-link">Véhicules</a>
            <a href="#" class="nav-item nav-link">Événements</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">
                    <i class="fa fa-user me-2"></i>Profil
                </a>
                <ul class="dropdown-menu fade-up m-0">
                    <li><a href="{{ path('profile_edit') }}" class="dropdown-item">Modifier mon profil</a></li>
                    <li><a href="{{ path('app_logout') }}" class="dropdown-item">Se déconnecter</a></li>
                </ul>
            </div>
            <a href="#" class="nav-item nav-link">Contact</a>
        </div>
    </div>
</nav>
<!-- Navbar End -->
<div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <div class="sidebar" style="width: 280px; background-color: #f8f9fa; border-radius: 0 15px 15px 0; box-shadow: 4px 0 15px rgba(0, 0, 0, 0.05); padding: 25px; position: sticky; top: 0; height: 100vh;">
        <div style="text-align: center; margin-bottom: 30px;">
            <h3 style="font-size: 22px; font-weight: 600; color: #A11010; border-bottom: 2px solid #A11010; padding-bottom: 10px; display: inline-block;">Service de covoiturage</h3>
        </div>

        <div class="sidebar-menu" style="display: flex; flex-direction: column; gap: 15px;">
            <a href="{{ path('app_covoiturage') }}" style="text-decoration: none;">
                <div class="menu-item" style="display: flex; align-items: center; padding: 12px 15px; border-radius: 8px; transition: all 0.3s;">
                    <img src="{{ asset('img/profil.png') }}" alt="Profile Icon" style="width: 22px; height: 22px; filter: brightness(0.7);">
                    <span style="font-size: 16px; color: #333; margin-left: 12px; font-weight: 500;">Profile</span>
                </div>
            </a>

            <a href="{{ path('app_covoiturage_poster') }}" style="text-decoration: none;">
                <div class="menu-item" style="display: flex; align-items: center; padding: 12px 15px; border-radius: 8px; transition: all 0.3s;">
                    <img src="{{ asset('img/car.png') }}" alt="Car Icon" style="width: 22px; height: 22px; filter: brightness(0.7);">
                    <span style="font-size: 16px; color: #333; margin-left: 12px; font-weight: 500;">Posts</span>
                </div>
            </a>

            <a href="{{ path('app_covoiturage_rechercher') }}" style="text-decoration: none;">
                <div class="menu-item" style="display: flex; align-items: center; padding: 12px 15px; border-radius: 8px; transition: all 0.3s;">
                    <img src="{{ asset('img/chatt.png') }}" alt="Chat Icon" style="width: 22px; height: 22px; filter: brightness(0.7);">
                    <span style="font-size: 16px; color: #333; margin-left: 12px; font-weight: 500; background-color: rgba(161, 16, 16, 0.1);">Offres</span>
                </div>
            </a>

            <a href="{{ path('app_covoiturage_mes_offres') }}" style="text-decoration: none;">
                <div class="menu-item" style="display: flex; align-items: center; padding: 12px 15px; border-radius: 8px; transition: all 0.3s;">
                    <img src="{{ asset('img/chatt.png') }}" alt="Chat Icon" style="width: 22px; height: 22px; filter: brightness(0.7);">
                    <span style="font-size: 16px; color: #333; margin-left: 12px; font-weight: 500;">Mes offres</span>
                </div>
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="flex-grow-1">
        <!-- QR Code Content -->
        <div class="container py-5" style="max-width: 800px;">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <div class="text-center mb-4">
                    <h1 class="text-primary" style="font-size: 28px; font-weight: bold;">Votre QR Code de Réservation</h1>
                </div>

                {% if qrPath %}
                    <div class="text-center mb-4">
                        <img src="{{ qrPath }}" alt="QR Code" style="max-width: 300px; width: 100%; height: auto; border: 2px solid #A11010; padding: 10px; border-radius: 15px;">
                    </div>
                {% else %}
                    <div class="text-center text-danger mb-4">
                        <p>QR Code non disponible.</p>
                    </div>
                {% endif %}

                <div class="text-center">
                    <p style="font-size: 18px; color: #555;"><strong>Départ:</strong> {{ post.villeDepart }}</p>
                    <p style="font-size: 18px; color: #555;"><strong>Arrivée:</strong> {{ post.villeArrivee }}</p>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_covoiturage') }}" class="btn btn-primary rounded-pill px-4 py-2" style="font-size: 16px;">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
