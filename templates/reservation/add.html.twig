{% extends 'front-office/front.html.twig' %}

{% block title %}Ajouter R√©servation{% endblock %}

{% block css %}
{{ parent() }}
    <link href="{{ asset('css/add_reservation.css') }}" rel="stylesheet">
    <link href="{{ asset('css/seat_icon.css') }}" rel="stylesheet">
{% endblock %}
{% block main_content %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">üìã Ajouter une R√©servation</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row g-4">
        <!-- Form -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.depart) }}
                    {{ form_widget(form.depart, {'attr': {'class': 'form-control', 'placeholder': 'Lieu de d√©part'}}) }}
                    {{ form_errors(form.depart) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.arret) }}
                    {{ form_widget(form.arret, {'attr': {'class': 'form-control', 'placeholder': 'Arr√™t'}}) }}
                    {{ form_errors(form.arret) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Type de v√©hicule</label>
                    <div class="vehicule-options">
                        {% for choice in form.vehicule %}
                            <div class="form-check">
                                {{ form_widget(choice) }}
                                {{ form_label(choice) }}
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.vehicule) }} {# üî¥ Affichage global des erreurs ici #}
                </div>
                <div class="mb-3" style="display: none;">
                    {{ form_widget(form.nb, {'attr': {'id': 'nb'}}) }}
                    {{ form_errors(form.nb) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre de places</label>
                    <div class="row">
                        <div class="col">
                            <div class="seat-card" data-value="1">
                                <div class="seat-icons">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                </div>
                                <p>1 Place</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="seat-card" data-value="2">
                                <div class="seat-icons">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                </div>
                                <p>2 Places</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="seat-card" data-value="3">
                                <div class="seat-icons">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                    <img src="https://cdn3.emoji.gg/default/samsung/seat.png" alt="Seat">
                                </div>
                                <p>3 Places</p>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 py-2">üöÄ R√©server</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>


        <!-- Map Column -->
        <div class="col-md-6">
            <div class="card bg-primary text-white border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h4 class="card-title text-white">üó∫Ô∏è Trouvez votre destination</h4>
                </div>
                <div class="card-body p-0">
                    <div class="card-body p-0">
                        <div id="map" style="height: 500px; width: 100%;"></div>
                    </div>
                    <div class="p-2 text-end">
                        <a href="https://www.openstreetmap.org/?#map=7/36.726/8.789" class="text-white">üîç Voir en grand</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br><br><br><br><br>
<!-- Reservation List -->
    <h2 class="text-center mt-4">üóÇÔ∏è Historique des R√©servations</h2>
    <div class="accordion" id="reservationAccordion">
        {% for reservation in reservations %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading{{ reservation.id }}">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ reservation.id }}" aria-expanded="true" aria-controls="collapse{{ reservation.id }}">
                        <div class="d-flex align-items-center">
                            {% set vehicule = reservation.vehicule|lower %}
                            {% if vehicule == 'bus' %}
                                <img src="{{ asset('img/vehicules/bus.png') }}" alt="Bus" width="32" class="me-3">
                            {% elseif vehicule == 'metro' %}
                                <img src="{{ asset('img/vehicules/metro.png') }}" alt="Metro" width="32" class="me-3">
                            {% elseif vehicule == 'train' %}
                                <img src="{{ asset('img/vehicules/train.png') }}" alt="Train" width="32" class="me-3">
                            {% else %}
                                <span class="me-3 fs-3">üöò</span>
                            {% endif %}
                            <h5 class="mb-0">{{ reservation.vehicule|capitalize }} - {{ reservation.depart }} ‚Üí {{ reservation.arret }}</h5>
                        </div>
                    </button>
                </h2>
                <div id="collapse{{ reservation.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ reservation.id }}" data-bs-parent="#reservationAccordion">
                    <div class="accordion-body">
                        <p><strong>D√©part:</strong> {{ reservation.depart }}</p>
                        <p><strong>Arr√™t:</strong> {{ reservation.arret }}</p>
                        <p><strong>Places:</strong> {{ reservation.nb }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-outline-primary btn-sm px-3">‚úèÔ∏è Modifier</a>
                            <a href="{{ path('reservation_delete', {'id': reservation.id}) }}" class="btn btn-outline-danger btn-sm px-3" onclick="return confirm('√ätes-vous s√ªr ?')">üóëÔ∏è Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-secondary text-center">
                Aucune r√©servation trouv√©e.
            </div>
        {% endfor %}
        <div class="text-center mt-5">
            <a href="{{ path('reservation_list') }}" class="btn btn-primary px-5 py-2">>üëÅÔ∏è Voir toutes les r√©servations</a>
        </div>
    </div>

{% endblock %}
