{% extends 'front-office/front.html.twig' %}

{% block title %}Modifier Station{% endblock %}

{% block main_content %}
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="p-4 shadow" style="
                    background: rgba(255, 255, 255, 0.6);
                    backdrop-filter: blur(10px);
                    border: 1px solid rgba(255, 255, 255, 0.3);
                    border-radius: 20px; /* <== extra round corners */
                ">
                    <h4 class="mb-4 text-center">🛠 Modifier la Station n°{{ station.id }}</h4>

                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="mt-3 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">💾 Mettre à jour</button>
                            <a href="{{ path('station_list') }}" class="btn btn-outline-secondary">↩️ Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
